{% extends 'layout.njk' %}

{% block body %}

    <div class="row">
        {% if messages.success %}
        <div  class="alert alert-success alert-dismissable">
            <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
            {% for success in messages.success %}
            <div>{{ success.msg }}</div>
            {% endfor %}
          {% endif %}
        </div>
        {% if messages.error %}

        <div  class="alert alert-danger alert-dismissable">
            <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
            {% for error in messages.error %}
            <div>{{ error.msg }}</div>
            {% endfor %}
        </div>
        {% endif %}
        {% if messages.info %}

        <div role="alert" class="alert alert-info alert-dismissable">
            <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
            {% for info in messages.info %}
            <div>{{ info.msg }}</div>
            {% endfor %}
        </div>
        {% endif %}
    </div>
    <!-- begin-body -->

    <div>
        <div class="col-md-2"></div>
        <div class="col-md-8">
            <div class="">
                <h5 class="text-muted">Tự học tiếng Nhật với 50 bài mina</h5>
                <ul class="nav nav-justified" id="menu-bar">
                    <li><a href="#">Từ vựng</a></li>
                    <li><a href="#">Ngữ Pháp</a></li>
                    <li><a href="#">Bài Đàm Thoại</a></li>
                    <li><a href="/chatroom">Phòng chat</a></li>
                    <li><a href="/videoroom">Phòng hội thoại</a></li>
                    <li><a href="/videoroom/r">Hội thoại tự do</a></li>
                </ul>
            </div>
            
        {% block home %}{% endblock %}

        </div>
        <div class=" col-md-2"></div>
    </div>
    <!-- end- body -->
{% endblock %}
