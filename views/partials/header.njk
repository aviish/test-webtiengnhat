<!-- begin-header -->
<header>
        <nav class="navbar navbar-masthead navbar-default navbar-fixed-top">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#myNavbar">       
                    <span class="sr-only">Toggle Navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>                 
                </button>
                <a class="navbar-brand" href="/">HEDSPI</a>
            </div>
            <div class="collapse navbar-collapse" id="myNavbar">
                <ul class="nav navbar-nav">
                    <li class="{% if title == 'Home' %}active{% endif %}"><a href="/">Home</a></li>
                    <li><a href="/contact">Contact</a></li>
                    <li><a href="/users">Users</a></li>
                </ul>
                <ul class="nav navbar-nav navbar-right" id="header-right">
                    {% if user %}
                        <li >
                            {% if user.picture %}
                            <img class=" avatar img-circle" src="{{ user.picture }}">
                            {% else %}
                            <img class=" avatar img-circle" src="/images/no-avatar.png">
                            {% endif %}
                        </li>
                    <li><a href="/account" class="{% if title == 'Home' %}active{% endif %}">
                        {% if user.name %}
                             {{ user.name }} {% elif user.email %}{{ user.email }}{% else %}{{ user.id }}
                        {% endif %}</a></li>
                    <li><a href="/logout">Logout</a></li>
                    {% else %}
                    <li><a href="/login"><span class="glyphicon glyphicon-log-in {% if title == 'Log in' %}active{% endif %}"></span> Log in</a></li>
                    <li><a href="/signup"><span class="glyphicon glyphicon-user {% if title == 'Sign up' %}active{% endif %}"></span> Sign Up</a></li>
                    {% endif %}
                </ul>
            </div>
        </nav>
</header>
<!-- end- header -->